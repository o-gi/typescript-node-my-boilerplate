{
  "name": "typescript-node-my-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "nodemon --exec ./node_modules/.bin/ts-node -- ./src/index.ts",
    "test": "jest"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^22.1.0",
    "jest": "^22.1.4",
    "ts-jest": "^22.0.1",
    "ts-node": "^4.1.0",
    "typescript": "^2.6.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
